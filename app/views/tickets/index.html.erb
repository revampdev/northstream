<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h3">Tickets</h1>

    <% if @tickets.any? %>
      <%= link_to t("shared.scaffold.new.title", model: "Ticket"), new_ticket_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @tickets.any? %>
    <div class="bg-white rounded shadow table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @tickets, :amount, "Amount", class: "text-gray-700" %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @tickets, :token, "Token", class: "text-gray-700" %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @tickets, :stream_id, "Stream", class: "text-gray-700" %></th>
            <th class="p-3 uppercase text-left text-xs"><%= sortable @tickets, :user_id, "User", class: "text-gray-700" %></th>
            <th class="p-3 uppercase text-left text-xs text-gray-700 w-20"><%= t("shared.scaffold.actions") %></th>
          </tr>
        </thead>

        <tbody>
        <% @tickets.each do |ticket| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                      <td class="p-3"><%= ticket.amount %></td>
                      <td class="p-3"><%= ticket.token %></td>
                      <td class="p-3"><%= ticket.stream_id %></td>
                      <td class="p-3"><%= ticket.user_id %></td>
          
            <td>
              <%= link_to t("shared.scaffold.view"), ticket, class: "btn btn-link no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="text-center my-6">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>

  <% else %>
    <div class="bg-white rounded shadow flex flex-col items-center justify-between p-8 lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="h3 mb-4">Create your first Ticket</p>
        <%= link_to t("shared.scaffold.new.title", model: "Ticket"), new_ticket_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
