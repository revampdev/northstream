<ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
  <% stream_list.each do |stream| %>
    <li class="flex flex-col col-span-1 text-center bg-white divide-y divide-gray-200 shadow rounded-2xl">
      <div class="flex flex-col flex-1">
        <% image_tag(stream.stream_image, size: '600x400', class: "flex-shrink-0 object-cover w-full h-80 bg-primary")%>
        <h3 class="mt-6 text-xl font-medium text-gray-900"><%=stream.name %></h3>
        <div class="mx-auto my-4">
          <p class="my-2">Ticket Price: <%= number_to_currency(stream.price) %></p>
          <p class="my-2"><%= stream.stream_date.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
      </div>
      <div>
        <div class="flex -mt-px divide-x divide-gray-200">
          <div class="flex flex-1 w-0 -ml-px">
            <%= link_to "View Stream", stream, class: "relative inline-flex items-center justify-center btn-primary flex-1 w-0 py-4 text-md font-medium text-white border border-transparent rounded-br-2xl"%>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
