<%= form_with(model: stream) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :slug %>
    <%= form.text_field :slug, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :stream_date %>
    <%= form.text_field :stream_date, class: "form-control", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :stream_key %>
    <%= form.text_field :stream_key, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :stream_rtmp_link %>
    <%= form.text_field :stream_rtmp_link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :live_stream_id %>
    <%= form.text_field :live_stream_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :playback_id %>
    <%= form.text_field :playback_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to t("delete"), form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: t("are_you_sure") } %>
    <% end %>
  </div>
<% end %>
